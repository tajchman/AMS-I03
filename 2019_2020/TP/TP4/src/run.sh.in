#! /bin/bash

CODE=""
NP="1"
NT="1"
OPTIONS=""

for OPT in $*
do
  case "$OPT" in
    code=*)
       CODE=${OPT:5} 
       ;;
    np=*)
       NP=${OPT:3}
       ;;
    t=*)
       NT=${OPT:2}
       ;;
    *)
       OPTIONS="${OPTIONS} ${OPT}"
       ;;
  esac
done

if [ "x${CODE}" == "x" ]
then
   echo "usage $0 code=<code> n=<n> t=<t> [option]"
   echo "   <n> : number of processes"
   echo "   <t> : number of threads/process"
   echo "   <code> : executable file containing the code"
   echo "   other option are redirected to the code" 
   exit -1
fi

BCODE=`basename ${CODE}`
sed -e "s/NN/${NP}/" \
    -e "s/NT/${NT}/" \
    -e "s?BCODE?${BCODE}?" \
    -e "s?CODE?${CODE}?" \
    -e "s/OPTIONS/${OPTIONS}/" \
        < @CMAKE_INSTALL_PREFIX@/job.in > job.sh

qsub job.sh
